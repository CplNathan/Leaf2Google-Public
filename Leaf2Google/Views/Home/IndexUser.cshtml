}
@model Leaf2Google.Models.Car.CarViewModel

@{
    <div class="row h-100 position-relative g-0">
        <div class="col col-12 col-md-6 col-lg-9 d-flex justify-content-center">
            <div class="h-100 w-100">
                @await Component.InvokeAsync("CarInfo",
            new
            {
            viewName = "Location",
            sessionId = (Guid?)ViewBag?.SessionId,
            defaultVin = (string?)ViewBag?.SelectedVin
            })
            </div>
            <div class="chargeContainer mb-5 position-absolute bottom-0">
                @await Component.InvokeAsync("CarInfo",
            new
            {
            viewName = "Charge",
            sessionId = (Guid?)ViewBag?.SessionId,
            defaultVin = (string?)ViewBag?.SelectedVin
            })
            </div>
        </div>
        <div class="col col-12 d-flex justify-content-end m-0 p-0 h-100 position-absolute">
            <div class="col col-12 col-md-6 col-lg-3 bg-dark bg-gradient shadow border-start border-secondary border-2">
                <div class="row m-0 g-2 p-2">
                    <div class="col col-12">
                        @await Component.InvokeAsync("CarInfo",
                    new
                    {
                    viewName = "CarPicture",
                    sessionId = (Guid?)ViewBag?.SessionId,
                    defaultVin = (string?)ViewBag?.SelectedVin
                    })
                    </div>
                    <div class="col col-4">
                        @await Component.InvokeAsync("CarInfo",
                    new
                    {
                    viewName = "ClimateTarget",
                    sessionId = (Guid?)ViewBag?.SessionId,
                    defaultVin = (string?)ViewBag?.SelectedVin
                    })
                    </div>
                    <div class="col col-4">
                        @await Component.InvokeAsync("CarInfo",
                    new
                    {
                    viewName = "ChargeVertical",
                    sessionId = (Guid?)ViewBag?.SessionId,
                    defaultVin = (string?)ViewBag?.SelectedVin
                    })
                    </div>
                    <div class="col col-4">
                        @await Component.InvokeAsync("CarInfo",
                    new
                    {
                    viewName = "ClimateCurrent",
                    sessionId = (Guid?)ViewBag?.SessionId,
                    defaultVin = (string?)ViewBag?.SelectedVin
                    })
                    </div>
                    <div class="col col-6">
                        <div class="d-flex flex-column align-items-center justify-content-between h-100 rounded-pill2 bg-warning text-white shadow">
                            <l2g-buttonaction colour="warning" action="flash" text="Lights"></l2g-buttonaction>
                        </div>
                    </div>
                    <div class="col col-6">
                        <div class="d-flex flex-column align-items-center justify-content-between h-100 rounded-pill2 bg-danger text-white shadow">
                            <l2g-buttonaction colour="danger" action="horn" text="Horn"></l2g-buttonaction>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}