<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Leaf2Google</title>
    <link async defer rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css" />
    <link async rel="stylesheet" href="~/css/bundle.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Leaf2Google</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
                <div class="ms-auto me-2">
                    @await Component.InvokeAsync("CarSelector",
                        new {
                            sessionId = (Guid?)ViewBag?.SessionId
                        }
                    )
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="d-flex">
            <div class="m-auto w-100">
                <div class="mx-auto">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="shadow-lg footer text-muted">
        <div class="container">
            &copy; 2022 - Leaf2Google - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script async src="~/js/bundle.js"></script>
    <script src="~/js/components-bundle.js"></script>
    <script async defer id="mapbox" src="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js"></script>
    <script async defer id="captcha" src="https://www.google.com/recaptcha/api.js"></script>

    <script>
        const api = {
            'toaster': '@(Url.Action("Create", "Toast"))',
            'car': {
                'action': '@(Url.Action("Action", "Car"))'
            },
            'auth': {
                'delete': '@(Url.Action("Delete", "Auth"))'
            }
        };
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    @*
    @foreach (var script in (Html.ViewContext.HttpContext.Items["ComponentScripts"] as HashSet<string> ?? new HashSet<string>()).Distinct())
    {
    <script async defer src="@script" asp-append-version="true"></script>
    }
    *@
</body>
</html>
